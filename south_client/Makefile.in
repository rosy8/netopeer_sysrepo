prefix = @prefix@
CHECK_DIR = $(DESTDIR)/@sysconfdir@/netopeer_sysrepo/sysrepo_ifc

CFLAGS = -g -Wall -Wextra -I@SYSREPOD_PATH@
LIBSRD = @SYSREPOD_PATH@/libsrd.a

sysrepo_ifc_daemon: sysrepo_ifc_daemon.c
	@-rm -rf sysrepo_ifc_daemon
	gcc $(CFLAGS) -DCHECK_DIR=\"$(CHECK_DIR)\" $^ $(LIBSRD) -lxml2 -o $@;

.PHONY: clean
clean:
	@-rm -rf sysrepo_ifc_daemon
